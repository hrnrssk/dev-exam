<p id="notice"><%= notice %></p>
<h1>物件詳細</h1>

<p>
  <strong>物件名:</strong>
  <%= @property.property_name %>
</p>

<p>
  <strong>賃料:</strong>
  <%= @property.rent %>円
</p>

<p>
  <strong>住所:</strong>
  <%= @property.address %>
</p>

<p>
  <strong>築年数:</strong>
  <%= @property.age %>年
</p>

<p>
  <strong>備考:</strong>
  <%= @property.memo %>
</p>

<br>

<% @nearest_stations.each_with_index do |f, i| %>
  <% if @property.nearest_stations.any? %>
  <h4>最寄り駅<%= i + 1 %></h4>

  <p>
  <strong>路線:</strong>
  <%= f.line %>
  </p>

  <p>
  <strong>駅名:</strong>
  <%= f.station %>
  </p>

  <p>
  <strong>徒歩分数:</strong>
  <%= f.on_foot %>分
  </p>
  <br>
  <% end %>
<% end %>

<%= link_to 'Edit', edit_property_path(@property) %> |
<%= link_to 'Back', properties_path %>